[Unit]
Description=DomBusGateway bridge between DomBus and MQTT
After=mosquitto.service
Requires=mosquitto.service  

[Service]
Type=simple
User=dombus
WorkingDirectory=/opt/DomBusGateway
ExecStart=/opt/DomBusGateway/dombusgateway.py
Restart=on-failure
RestartSec=5s
ExecStartPre=+/bin/mkdir -m 740 -p /var/log/dombusgateway
ExecStartPre=+/bin/chown dombus /var/log/dombusgateway


[Install]
WantedBy=multi-user.target
